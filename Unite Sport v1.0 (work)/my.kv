#Гланый экран-----------------------------------------------------------------------------------------------------------
<Container1>:
    name: 'Container1'
    rows: 3                                                 #колличество строк

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        RelativeLayout:
            ButtonSize150:
                #секундомер
                #disabled: True                             # вкл/вкл кнопка
                #opacity: 0                                 # непрозрачность кнопки
                #size: 150, 150                             # задаёт размеры в пикселях
                #size_hint: None, None                      # даёт работать size
                #size_hint: 0.25, 0.25                      # настройка размера в %
                pos_hint: { 'x': 0.35, 'center_y': 0.7}     # настройка позиции в % относительно левого нижнего края
                #background_color: (0, 255, 255, 0.9)       # цвет кнопки в RGB
                #text: 'Секундомер'                         # настройка текста
                #font_size: 40                              # настройка размера шрифта
                #font_name: 'Fulbo.otf'                     # шрифт
                background_normal: 'images/img_time.png'           #изображение на кнопку
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "Container2"


            ButtonSize150:
                #калькулятор
                #size_hint: 0.2, 0.2
                pos_hint: { 'x': 0.35, 'center_y': 0.5}
                background_normal: 'images/img_calc.png'

                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = "Container3"

            ButtonSize150:
                #заметки
                #size_hint: 0.2, 0.2
                pos_hint: { 'x': 0.35, 'center_y': 0.3}
                background_normal: 'images/img_write.png'

                on_release:
                    root.manager.transition.direction = 'left'  #направление сдвига экрана
                    root.manager.current = "Container4"         #перемещение на определённый экран заданный в ".py"

#Секундомер-------------------------------------------------------------------------------------------------------------
<Container2>:
    name: 'Container2'
    rows: 3
    id: stopwatch
    timer_display: output
    start_button: start
    stop_button: stop
    restart_button: restart


    FloatLayout:
        cols: 2

        ButtonSize100:
            #кнопка на лево
            pos_hint: { 'center_x': 0.125, 'center_y': 0.9375}
            background_normal: 'images/img_left.png'

            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "Container4"

        ButtonSize100:
            #кнопка меню
            pos_hint: { 'center_x': 0.5, 'center_y': 0.9375}
            background_normal: 'images/img_menu.png'

            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "Container1"

        ButtonSize100:
            #кнопка на право
            pos_hint: { 'center_x': 0.875, 'center_y': 0.9375}
            background_normal: 'images/img_right.png'

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "Container3"

        FloatLayout:
            pos_hint: { 'center_x': 0.5, 'center_y': 0.525}

            Label:
                #таймер
                id: output
                pos_hint: { 'center_x': 0.5, 'center_y': 0.49}
                text: '00:00'
                font_size: 120
                font_name: 'Ponter X.ttf'

            Image:
                #рамка таймера
                source: 'images/img_time0000.png'
                #size: 392, 206
                #size_hint: None, None
                size_hint: 0.725, 0.1907
                pos_hint: { 'center_x': 0.5, 'center_y': 0.5}

            ButtonSize100:
                #кнопка старт
                id: start
                pos_hint: { 'center_x': 0.225, 'center_y': 0.325}
                background_normal: 'images/img_start.png'
                background_color: (43, 43, 43, 1)
                on_release:
                    stopwatch.Start_The_Clock()



            ButtonSize100:
                #кнопка стоп
                id: stop
                disabled: True
                opacity: 0
                pos_hint: { 'center_x': 0.5, 'center_y': 0.325}
                background_normal: 'images/img_stop.png'
                on_release:
                    stopwatch.Stop_The_Clock()

            ButtonSize100:
                #кнопка перезапуск
                id: restart
                pos_hint: { 'center_x': 0.775, 'center_y': 0.325}
                background_normal: 'images/img_reload.png'
                on_release:
                    stopwatch.Restart_The_Clock()

