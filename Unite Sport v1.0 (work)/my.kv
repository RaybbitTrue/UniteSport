#Заметки----------------------------------------------------------------------------------------------------------------
<Container4>:
    name: 'Container4'
    rows: 3
    id: notes
    display_notes: entry_notes
    plus_notes: plus


    FloatLayout:
        #cols: 3

        ButtonSize100:
            #кнопка на лево
            pos_hint: { 'center_x': 0.125, 'center_y': 0.9375}
            background_normal: 'images/img_left.png'
            on_release:
                notes.Update_Note()
                root.manager.transition.direction = 'right'
                root.manager.current = "Container3"

        ButtonSize100:
            #кнопка меню
            pos_hint: { 'center_x': 0.5, 'center_y': 0.9375}
            background_normal: 'images/img_menu.png'
            on_release:
                notes.Update_Note()
                root.manager.transition.direction = 'right'
                root.manager.current = "Container1"

        ButtonSize100:
            #кнопка на право
            pos_hint: { 'center_x': 0.875, 'center_y': 0.9375}
            background_normal: 'images/img_right.png'
            on_release:
                notes.Update_Note()
                root.manager.transition.direction = 'left'
                root.manager.current = "Container2"

        FloatLayout:
            pos_hint: { 'center_x': 0.5, 'center_y': 0.52}

            TextInput:
                #ввод заметок
                id: entry_notes
                #size: 467, 727
                #size_hint: None, None
                size_hint: 0.8648, 0.6731
                pos_hint: { 'center_x': 0.5, 'center_y': 0.5}
                #text: 'Суставная разминка'
                color: 0, 255, 255, 1
                font_size: 20
                font_name: 'Ponter X.ttf'

            Image:
                #рамка заметок
                source: 'images/img_zametki.png'
                #size: 490, 750
                #size_hint: None, None
                size_hint: 0.9074, 0.6944
                pos_hint: { 'center_x': 0.5, 'center_y': 0.5}

            ButtonSize100:
                #кнопка добавить заметку или плюс
                id: plus
                pos_hint: { 'center_x': 0.15, 'center_y': 0.07}
                background_normal: 'images/img_+_zam.png'
                on_release:
                    notes.Check_Display_Notes()

            ButtonSize100:
                #кнопка списка заметок
                pos_hint: { 'center_x': 0.3825, 'center_y': 0.07}
                background_normal: 'images/img_menu_zam.png'
                on_release:
                    notes.Update_Note()
                    root.manager.transition.direction = 'right'
                    root.manager.current = "Container5"

            ButtonSize100:
                #кнопка очистить поле ввода для создания заметки
                pos_hint: { 'center_x': 0.6175, 'center_y': 0.07}
                background_normal: 'images/img_x_zam.png'
                on_release:
                    notes.Clear_Display_Notes()

            ButtonSize100:
                #кнопка удалить заметку
                pos_hint: { 'center_x': 0.85, 'center_y': 0.07}
                background_normal: 'images/img_del_zam.png'
                on_release:
                    notes.Delete_Note()

